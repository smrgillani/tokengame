<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" tools:context=".RegisterActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wait ... Page Loading "
            android:id="@+id/r_message"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="Fisrt Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:visibility="invisible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/last_name"
            android:layout_below="@+id/first_name"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/first_name"
            android:hint="Last Name"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/first_name"
            android:visibility="invisible" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/gender"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/last_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/last_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            app:ms_multiline="false"
            app:ms_hint="Select Your Gender"
            app:ms_enableFloatingLabel="false"
            app:ms_enableErrorLabel="false"
            app:ms_floatingLabelText="floating label"
            app:ms_baseColor="@color/gray"
            app:ms_highlightColor="@color/white"
            app:ms_errorColor="@color/gray"
            app:ms_thickness="0.4dp"
            app:ms_hintColor="@color/gray"
            app:ms_arrowColor="@color/gray"
            app:ms_arrowSize="16dp"
            app:ms_alignLabels="false"
            app:ms_floatingLabelColor="@color/gray"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:layout_below="@+id/gender"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/gender"
            android:hint="Email"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/gender"
            android:visibility="invisible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/phone"
            android:layout_below="@+id/email"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/email"
            android:hint="Phone"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/email"
            android:visibility="invisible" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/dob"
            android:layout_below="@+id/phone"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/phone"
            android:hint="Date Of Birth"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/phone"
            android:visibility="invisible"/>

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/city"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/dob"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@+id/gender"
            android:layout_alignEnd="@+id/gender"
            android:layout_alignRight="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_marginLeft="4dp"
            app:ms_multiline="false"
            app:ms_hint="Select Your City"
            app:ms_enableFloatingLabel="false"
            app:ms_enableErrorLabel="false"
            app:ms_floatingLabelText="floating label"
            app:ms_baseColor="@color/gray"
            app:ms_highlightColor="@color/white"
            app:ms_errorColor="@color/gray"
            app:ms_thickness="0.4dp"
            app:ms_hintColor="@color/gray"
            app:ms_arrowColor="@color/gray"
            app:ms_arrowSize="16dp"
            app:ms_alignLabels="false"
            app:ms_floatingLabelColor="@color/gray"
            android:layout_alignLeft="@+id/gender" />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/currency"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/city"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignStart="@+id/gender"
            android:layout_alignEnd="@+id/gender"
            android:layout_alignRight="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:layout_marginLeft="4dp"
            app:ms_multiline="false"
            app:ms_hint="Select Your Currency"
            app:ms_enableFloatingLabel="false"
            app:ms_enableErrorLabel="false"
            app:ms_floatingLabelText="floating label"
            app:ms_baseColor="@color/gray"
            app:ms_highlightColor="@color/white"
            app:ms_errorColor="@color/gray"
            app:ms_thickness="0.4dp"
            app:ms_hintColor="@color/gray"
            app:ms_arrowColor="@color/gray"
            app:ms_arrowSize="16dp"
            app:ms_alignLabels="false"
            app:ms_floatingLabelColor="@color/gray"
            android:layout_alignLeft="@+id/gender" />

        <Button
            android:onClick="user_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:id="@+id/update_user"
            android:layout_below="@+id/currency"
            android:layout_alignEnd="@+id/currency"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/currency"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            android:visibility="invisible" />

    </RelativeLayout>
</ScrollView>
